<Window x:Name="YoshinoShell" x:Class="YoshinoShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoshinoShell"
        mc:Ignorable="d"
        Title="YoshinoShell" Height="500" Width="1034" Closing="CloseWindow">
    <Grid Background="#FF353535" Focusable="True">
        <TextBox HorizontalAlignment="Left" Margin="215,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="528" Background="{x:Null}" Foreground="White" Height="40" MaxLines="1" x:Name="CommandLine" FontSize="28" PreviewKeyDown="CommandLineBoxPreviewKeyDown"/>
        <TextBox HorizontalAlignment="Left" Margin="215,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="575" Height="356" Foreground="White" Background="{x:Null}" x:Name="ResultBox" FontSize="16" IsReadOnly="True"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="748,45,0,0" VerticalAlignment="Top" Height="40" Width="42" x:Name="EnterButton" Click="EnterButton_Click"/>
        <Image x:Name="UserImage" Margin="10,10,0,0" Source="/yoshino.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="200"/>
        <TextBox HorizontalAlignment="Left" Margin="215,10,0,0" VerticalAlignment="Top" Width="575" Background="{x:Null}" Foreground="White" Height="30" MaxLines="1" x:Name="CurrentPWD" FontSize="24" IsReadOnly="True"/>
        <ListBox x:Name="SuggestionBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="795,45,0,0" Background="{x:Null}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Height="401" Width="150"/>
        <Label Content="Suggestion" HorizontalAlignment="Left" Margin="801,5,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>

    </Grid>
</Window>
